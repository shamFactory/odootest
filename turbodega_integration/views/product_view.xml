<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="product_template_view_form_inherit_turbodega" model="ir.ui.view">
            <field name="name">product.template.inherit.form.turbodega</field>
            <field
                name="inherit_id"
                ref="sale.product_template_form_view_sale_order_button"
            />
            <field name="model">product.template</field>
            <field name="arch" type="xml">
            <field name="default_code" position="attributes">
                <attribute name="required">1</attribute>
            </field>
            <field name="taxes_id" position="attributes">
                <attribute name="required">1</attribute>
            </field>

            <div class="oe_button_box" name="button_box">
                <button
                        name="sync_turbodega"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-archive"
                        string="Turbodega"
                    >
                    <field
                            name="turbodega_sync"
                            widget="boolean_button"
                            options='{" terminology": "archive"}'
                            invisible="1"
                        />
                </button>
            </div>
                    <xpath expr="//field[@name='uom_po_id']" position="after">
                        <field name="turbodega_sync" string="Sync" />
                    </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Turbodega log">
                        <field name="resultado" string="Resultado" />
                    </page>
                </xpath>
            </field>
        </record>




    </data>
</odoo>
